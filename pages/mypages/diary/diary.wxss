.conbox {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.conbox .navbox {
    width: 100%;
    height: 44px;
    border-bottom: 1px solid #eee;
}

.navbox ul {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 10px;
}

.navbox li {
    width: 28px;
    height: 44px;
}

.navbox .navliactive {
    border-bottom: 1px solid #0dc441;
}

.navbox .liimgbox {
    width: 28px;
    height: 44px;
}

.navbox li image {
    width: 100%;
    height: 100%;
}

.diarybox {
    width: 100%;
    flex: 1;
}

.diarybox swiper-item, .scroll {
    width: 100%;
    height: 100%;
}

.conbox .scroll {
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.diaryimg {
    width: 100%;
    height: 80%;
}

.diaryimg image {
    width: 100%;
    height: 100%;
}

.scbox {
    width: 100%;
    height: 20px;
    box-sizing: border-box;
    padding-right: 10px;
    display: flex;
    justify-content: flex-end;
    margin-top: 10px;
}

.shangchuan {
    width: 40px;
    height: 20px;
    background: #0dc441;
    text-align: center;
    line-height: 20px;
    color: #fff;
}

.videoBox {
    width: 100%;
    height: 200px;
}

.videoBox video {
    width: 100%;
    height: 200px;
}

.audioBox {
    width: 100%;
    height: auto;
}

.audioBox audio {
    width: 100%;
    height: auto;
}
