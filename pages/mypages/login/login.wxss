.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.title{
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.title .imgBox{
  width: 60px;
  height: 60px;
}
.imgBox image{
  width: 100%;
  height: 100%;
}
.name{
  width: 100%;
  height: 40px;
  font-size: 12px;
  display: flex;
  box-sizing: border-box;
  margin: 10px;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.nameimg{
  width: 20px;
  height: 20px;
}
.nameimg image{
  width: 100%;
  height: 100%;
}
.name input{
  flex: 1;
  height: 100%;
  color: #444;
  line-height: 40px;
  box-sizing: border-box;
  padding-left: 20px;
}
.loginbox{
  margin-top: 10px;
  width: 100%;
  height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login{
  width: 100%;
  color: #fff;
  height: 100%;
  background: #0dc441;
  text-align: center;
  border-radius: 20px;
  line-height: 40px;
}
.forget{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  padding: 10px;
  color: #0dc441;
  font-size: 12px;
}
.loginstyle{
  width: 100%;
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.loginstyle li{
  width: 40px;
  height: 40px;
}
.loginstyle li image{
  width: 100%;
  height: 100%;
}
