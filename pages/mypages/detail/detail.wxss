.wrapbox {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.wrapbox scroll-view {
    background: #eee;
    flex: 1;
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.detailbox {
    width: 100%;
    display: flex;
    flex-direction: column;
    height: auto;
}

.imgbox {
    width: 100%;
    height: 160px;
}

.imgbox image {
    width: 100%;
    height: 100%;
    font-size: 12px;
    color: #444;
}

.detailbox .pricebox {
    background: #fff;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 10px;
    font-size: 12px;
    color: #444;
}

.oldprice {
    font-size: 14px;
    color: #0dc441;
    padding: 8px 0 10px 0;
}

.detail {
    background: #fff;
    margin-top: 10px;
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
}

.detail image {
  margin-top: 10px;
    width: 100%;
    height: auto;
}

.footbox {
    width: 100%;
    height: 44px;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 10px;
    align-items: center;
}

