.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.box{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-left: 10px;
}
.con{
  width: 100%;
  height: 100px;
  font-size: 12px;
  color: 12px;
}
.imgbox{
  width: 40px;
  height: 40px;
}
.imgbox image{
  width: 100%;
  height: 100%;
}
.wrap .savebox{
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  padding-top: 10px;
  padding-right: 10px;
}
.save{
  width: 60px;
  font-size: 12px;
  height: 30px;
  border-radius: 10px;
  text-align: center;
  color: #fff;
  line-height: 30px;
  background: #0dc441;
}
.talkcon{
  width:100%;
  height:auto;
}
