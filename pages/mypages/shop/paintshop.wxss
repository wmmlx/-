.huaBox {
    width:100%;
    height: 100%;
}
.huaBox scroll-view {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.huaBox ul{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  background: #eee;
  /*padding-bottom: 60px;*/
}
.huaBox ul li{
  display: flex;
  box-sizing: border-box;
  width: 100%;
  height: 110px;
  padding: 10px;
  background: #fff;
  margin-top: 10px;
}
.imgbox{
  display: flex;
  width: 30%;
  height:100%;
}
.imgbox image{
   width: 100%;
   height: 100%;
}
.detail{
  width: 70%;
  padding:0 0 10px 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.title{
  color: #444;
  font-size: 14px;
}
.oldprice{
  color:#999;
  text-decoration: line-through;
  font-size: 10px;
  box-sizing: border-box;
  padding: 20px 0 10px 0;
}
.pricebox{
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  color:#0dc441;
}
.refresh{
  background: #fff;
  font-size: 14px;
  border: 0;
}
.huaBox .more button{
  background: #fff;
  font-size: 14px;
  border: 0;
  margin-top: 10px;
  padding-bottom: 40px;
}
