.con {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.con .top {
    width: 50%;
    height: 30%;
}

.con .top image {
    width: 100%;
    height: 100%;
}
.con .bottom {
    width: 100%;
    box-sizing: border-box;
    padding-bottom: 20px;
    height: 70%;
}
.bottom image {
    width: 100%;
    height: 100%;
}
